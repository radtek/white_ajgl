<?xml version="1.0" encoding="utf-8"?>
<!-- ListView tree字段 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:minHeight="40dip" >

	<TextView
		android:id="@+id/tvPadding"
	    android:layout_width="2dip"
	    android:layout_height="wrap_content"
	    android:textSize="16dip"
	    android:textColor="#ff000000"
	    android:layout_alignParentLeft="true">
	</TextView>
	
	<ImageView
		android:id="@+id/ivExEc"
		android:layout_centerVertical="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_alignParentRight="true">
	</ImageView>
	
	<CheckBox android:text="" 
		android:id="@+id/chbSelect"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"
		android:layout_marginRight="3dp"
		android:layout_marginLeft="3dp"
		android:gravity="center_vertical"
		android:button="@null"
		android:background="@drawable/aa_conllection_checkbox"
	    android:focusable="false" android:clickable="true"
	    android:focusableInTouchMode="false"
	    android:layout_toRightOf="@id/tvPadding">
	</CheckBox>
	
	<ImageView
		android:id="@+id/ivIcon"
		android:layout_centerVertical="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical" 
	    android:layout_toRightOf="@id/chbSelect">
	</ImageView>
	
	<TextView android:paddingLeft="2dip"
		android:id="@+id/tvText"
	    android:layout_width="wrap_content"
	    android:layout_height="40dip"
	    android:textSize="18dip"
	    android:gravity="center_vertical|left" 
	    android:textColor="#666666"
	    android:layout_toLeftOf="@id/ivExEc"
	    android:layout_toRightOf="@id/ivIcon">
	</TextView>
	
</RelativeLayout>